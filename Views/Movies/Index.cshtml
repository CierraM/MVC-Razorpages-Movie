@model MvcMovie.Models.MovieGenreViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<form asp-controller="Movies" asp-action="Index" method="get" class="form-group">
    <h3>View Options</h3>
    <p>
        <label for="">Genres
        <select asp-for="MovieGenre" asp-items="ViewBag.GenreId">
            <option value="">All</option>
        </select>
        </label><br>

        Title: <input type="text" asp-for="SearchString" />
        
        <br>
        <label for="">
            <input type="checkbox" asp-for="SortByDate">
            Sort by Release Date
        </label>
        <br>
        <input class="btn-outline" type="submit" value="Filter" />
    </p>
</form>
<p>
    <a asp-action="Create" class="btn-outline">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
           <th>
                @Html.DisplayNameFor(model => model.Movies[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].GenreId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Price)
            </th>
            <th>
            @Html.DisplayNameFor(model => model.Movies[0].Rating)
        </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Movies) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.GenreName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
